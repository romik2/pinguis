<!DOCTYPE html>
<html lang="ru">
<head>
    <title>{% block title %}{{ 'Monitoring tool' | trans }}{% endblock %}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Мониторинг оборудованияя">
    <meta name="author" content="Romtuck">
    {% block stylesheets %}
        <link id="theme-style" rel="stylesheet" href="{{ asset('css/portal.css') }}">
        <link id="theme-style" rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link id="theme-style" rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    {% endblock %}
    <script src="{{ asset('js/jquery.js') }}"></script>
</head>

<body class="app">
<header class="app-header fixed-top">
    <div class="app-header-inner">
        <div class="container-fluid py-2">
            <div class="app-header-content">
                <div class="row justify-content-between align-items-center">

                    <div class="col-auto">
                        <ul class="navbar-nav me-auto mb-2">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('dashboard_tool') }}">{{ "List tool" | trans }}</a>
                            </li>
                        </ul>
                    </div>

                    <div class="app-utilities col-auto">
                        <div class="app-utility-item app-user-dropdown dropdown">
                            <a class="dropdown-toggle" id="user-dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false"><img src="{{ asset('images/user.png') }}" alt="user profile">
                                {{ app.user.lastname ~ " " ~ app.user.firstname }}
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="user-dropdown-toggle">
                                <li><a class="dropdown-item" href="{{ path('profile_details') }}">{{ "Profile" | trans }}</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ "Log Out" | trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-fluid">
        {% block body %}{% endblock %}
    </div>
</div>

{% block modal %}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/chart.js/chart.min.js') }}"></script>
{% endblock %}
</body>
</html>