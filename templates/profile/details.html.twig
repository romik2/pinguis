{% extends 'base.html.twig' %}

{% block title %}{{ "Profile" | trans }}{% endblock %}
{% import 'fields/text.html.twig' as fieldText %}
{% import 'fields/select.html.twig' as fieldSelect %}

{% block body %}
    <form action="{{ path('profile_edit', {id: user.id}) }}" method="post">
        <div class="app-card app-card-stats-table h-100 shadow-sm">
            <div class="app-card-header p-3">
                <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                        <h4 class="app-card-title">{{ "Edit profile" | trans }}</h4>
                    </div>
                    <div class="col-auto">
                        <div class="card-header-action">
                            <button type="submit" class="btn edit-tool btn-primary">{{ 'Save' | trans }}</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="app-card-body p-3 p-lg-4">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <div class='row form-group'>
                                <div class='col-6'>
                                    {{ fieldText.text('user[firstName]', 'FirstName' | trans, { required: true, value: user.firstname }) }}
                                </div>
                                <div class='col-6'>
                                    {{ fieldText.text('user[lastName]', 'LastName' | trans, { required: true, value: user.lastname }) }}
                                </div>
                            </div>
                            <div class='row form-group'>
                                <div class='col-6'>
                                    {{ fieldText.text('user[telegramChatId]', 'idTelegramChat' | trans, { type: 'number', value: user.telegramChatId }) }}
                                </div>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <div class='col-6'>
                                        {{ fieldSelect.select('role', 'Role', {
                                            required: true,
                                            value: roles | map((childRole, role) => {key: role, value: role | trans }),
                                        }) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    {% if is_granted('ROLE_ADMIN') %}
        <form action="{{ path('settings_edit') }}" method="post">
            <div class="mt-2 app-card app-card-stats-table h-100 shadow-sm">
                <div class="app-card-header p-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <h4 class="app-card-title">{{ "Setting admin" | trans }}</h4>
                        </div>
                        <div class="col-auto">
                            <div class="card-header-action">
                                <button type="submit" class="btn edit-tool btn-primary">{{ 'Save' | trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="app-card-body p-3 p-lg-4">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12">
                                {% for setting in settings %}
                                    <div class='row form-group'>
                                        <div class='col-12'>
                                            {{ fieldText.text('settings['~setting.id~']', setting.name, { value: setting.value }) }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}
