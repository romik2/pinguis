<script defer src="plugins/fontawesome/js/all.min.js"></script>
<link id="theme-style" rel="stylesheet" href="css/portal.css">
{% block body %}
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 auth-main-col text-center">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <h2 class="auth-heading text-center">Авторизация</h2>
                    <div class="auth-form-container">
                        <div class="justify-content-center align-items-center">
                        <form class="auth-form login-form" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                            <div class="email mb-3">
                                <label class="sr-only" for="signin-email">Логин</label>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control signin-email" placeholder="Логин" autocomplete="username" required autofocus>
                            </div>
                            <div class="password mb-3">
                                <label class="sr-only" for="signin-password">Пароль</label>
                                <input id="signin-password" name="password" type="password" class="form-control signin-password" placeholder="Пароль" required="required">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn app-btn-primary btn-block theme-btn mx-auto">Войти</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
