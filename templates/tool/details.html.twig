<div class="app-card app-card-stats-table h-100 shadow-sm">
    <div class="app-card-header p-3">
        <div class="row justify-content-between align-items-center">
            <div class="col-auto">
                <h4 class="app-card-title">{{ tool.name }}</h4>
            </div>
            <div class="col-auto">
                <div class="card-header-action">
                    {# <button type="button" class="btn edit-tool btn-primary" data-action="{{ path('edit_tool', {id: tool.id}) }}" data-toggle="modal" data-target="#toolForm">{{ 'Edit' | trans }}</button> #}
                    {# <button type="button" class="btn add-tool btn-danger" data-action="{{ path('edit_tool', {id: tool.id}) }}" data-toggle="modal" data-target="#toolForm">{{ 'Delete' | trans }}</button> #}
                </div>
            </div>
        </div>
    </div>
    <div class="app-card-body p-3 p-lg-4">
        <div class="row">
            <div class="col-12 mb-2">
                <span class="float-end">{{ "Address tool" | trans }}: {{ tool.address }}</span>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-8">
                        {% for statusTool in tool.getToolStatusesLimit(20) %}
                            <div class="beat" title="{{ (statusTool.createdAt | date("d.m.Y H:i")) ~ "\n" ~ statusTool.messages }}" style="background: {{ statusTool.status.color }}"></div>
                        {% endfor %}
                    </div>
                    <div class="col-4">
                        <span class="float-end badge rounded-pill state-text" style="background: {{ tool.status.color }}">{{ tool.status.name }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>