{% extends 'base.html.twig' %}

{% block title %}{{ "Tool monitoring" | trans }}{% endblock %}

{% set downIcon %}
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down text-danger" fill="currentColor">
        <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
    </svg>
{% endset %}

{% set upIcon %}
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up text-success" fill="currentColor">
        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
    </svg>
{% endset %}

{% block body %}
<div class="row">
<div class="col-12" id="listTool">
    <div class="app-card app-card-stats-table h-100 shadow-sm">
        <div class="app-card-header p-3">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h4 class="app-card-title">{{ 'List tool' | trans }}</h4>
                </div>
                  <div class="col-auto">
                        <div class="card-header-action">
                            <button type="button" href="#" class="btn add-tool btn-primary" data-action="{{ path('add_tool') }}" data-toggle="modal" data-target="#toolForm">{{ 'Add tool' | trans }}</button>
                        </div>
                    </div>
            </div>
        </div>
        <div class="app-card-body p-3 p-lg-4">
            <div class="table-responsive">
                <table class="table table-borderless mb-0">
                    <thead>
                        <tr>
                            <th class="meta">{{ 'Name' | trans }}</th>
                            <th class="meta stat-cell">{{ 'Availability legend' | trans }}</th>
                            <th class="meta stat-cell">{{ 'Productivity' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tool in tools %}
                            <tr>
                                <td><a class="details-view" data-id={{tool.id}}>{{ tool.name }}</a></td>
                                <td class="stat-cell">
                                {% for statusTool in tool.getToolStatusesLimit(10) %}
                                    <div class="beat-mobile" style="background: {{ statusTool.status.color }}"></div>
                                {% endfor %}
                                </td>
                                <td class="stat-cell">-</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="col-12 col-lg-8" id="loaderDetails" hidden>
   <center><div class="lds-dual-ring"></div></center>
</div>
<div class="col-12 col-lg-8" id="detailsTool" hidden>
   
</div>
</div>

<script>
    $(function() {
        let idTool;

        $(".details-view").click(function() {
            $("#listTool").addClass('col-lg-4');
            $("#detailsTool").attr('hidden', true);
            $("#loaderDetails").removeAttr('hidden');
            idTool = $(this).data('id');
            getDetailsTool(idTool);
        });

        setInterval( function () {
            if (idTool) {
                getDetailsTool(idTool);
            }
        }, 10000 );

    });

    function getDetailsTool(id) {
        $.ajax({
            url: '{{ path('details_tool') }}',
            data: {id},
            method: "POST",
            success: function (data) {
                $("#detailsTool").html(data.content);
                $("#detailsTool").removeAttr('hidden');
                $("#loaderDetails").attr('hidden', true);
            }
        });
    }
</script>
{% endblock %}

{% block modal %}
    {% import 'forms/form_tool.html.twig' as toolForm %}

    {% set toolFormVars = {
        formId: 'toolForm',
        content: toolForm.inputs(),
        title: 'Tool' | trans
    } %}

    {% include 'partial/modal.html.twig' with toolFormVars %}
{% endblock %}